<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.mycompany.invoce.controller.InvoiceControllerDouchette">
        <property name="invoiceService" ref="invoiceservice"/>
    </bean>

    <bean id="invoiceservice" class="com.mycompany.invoce.service.InvoiceServicePrefix">
        <property name="invoiceRepository" ref="invoiceRepository"/>
    </bean>

    <bean id="invoiceRepository" class="com.mycompany.invoce.repository.InvoiceRepositoryDatabase"/>



</beans>